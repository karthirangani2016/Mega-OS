# Mega-OS Build Configuration for S905X2 (Jio Hybrid C200 V1)
# 67 Features + Colorful UI + Firefox Browser

# ===== Board and SoC =====
BOARD="meson64"
BOARD_FAMILY="amlogic"
CHIP="s905x2"
TARGET_DEVICE="Jio Hybrid C200 V1"

# ===== Release and Kernel =====
RELEASE="jammy"
BRANCH="current"
KERNEL_CONFIGURE="yes"
KERNEL_ONLY="no"

# ===== Build Desktop & UI =====
BUILD_DESKTOP="yes"
BUILD_MINIMAL="no"
DESKTOP_ENVIRONMENT="xfce"
DESKTOP_APPGROUPS_SELECTED="Firefox web-browser system-tools multimedia development utilities accessories games"

# ===== Core UI Packages (Colorful & Modern) =====
# Theme engines & icons for vibrant UI
EXTRA_BUILD_PACKAGES="firefox firefox-locale-en chromium-browser \
papirus-icon-theme arc-theme breeze-icon-theme \
xfce4-whiskermenu-plugin xfce4-panel-profiles xfce4-panel xfce4-terminal \
lxappearance gtk-3-engines-xfce gtk-engines \
pluma mousepad geany geany-plugins \
geeqie gpicview feh \
vlc mpv audacious gimp inkscape \
libreoffice libreoffice-calc libreoffice-writer libreoffice-impress \
thunderbird evolution \
transmission deluge \
blender krita \
steam proton wine \
htop iotop nethogs \
tmux screen byobu \
python3 python3-pip python3-dev \
nodejs npm \
git gitk github-cli \
build-essential gcc g++ gdb \
vim nano emacs \
curl wget aria2 \
openssh-server openssh-client \
rsync rclone \
vnc4server x11vnc \
imagemagick ghostscript \
ffmpeg libav-tools \
zip unzip p7zip-full \
gcc-arm-linux-gnueabihf gcc-aarch64-linux-gnu \
nginx apache2 \
mysql-server postgresql \
redis-server memcached \
docker.io docker-compose \
qemu qemu-kvm virtualbox \
wireshark tcpdump nmap \
fail2ban ufw \
zsh bash-completion \
neofetch screenfetch htop \
cowsay figlet \
fortune sl pv \
ranger midnight-commander \
locate mlocate \
at cron \
systemd-container \
apt-transport-https ca-certificates \
grub-pc u-boot-tools \
initramfs-tools dracut \
linux-headers-generic \
dkms \
wireless-tools wpasupplicant \
bluez blueman \
pulseaudio pavucontrol \
alsa-utils alsamixer"

# ===== U-Boot and Kernel Options =====
BOOTCONFIG="meson64_s905x2_config"
BOOTDELAY="-1"
UBOOT_USE_GIT="yes"
UBOOT_SOURCE_BRANCH="v2021.07"

# ===== Storage Configuration =====
CARD_DEVICE="/dev/mmcblk0"
BOOT_SPACE=256
BOOT_PARTITION_TYPE="0x0C"
IMAGE_COMPRESSION="xz"

# ===== Network and Services =====
SYSTEMD_NSPAWN_SETTINGS="-N"
ENABLE_DHCP="yes"
ENABLE_IPV6="yes"

# ===== Custom Features =====
MEGA_OS_FEATURES_ENABLED="yes"
MEGA_OS_VERSION="1.0.0"
MEGA_OS_COLORFUL_UI="yes"
MEGA_OS_FEATURE_COUNT="67"
INCLUDE_FIREFOX="yes"
INCLUDE_MULTIMEDIA="yes"
INCLUDE_DEVELOPMENT_TOOLS="yes"
INCLUDE_PRODUCTIVITY_SUITE="yes"
INCLUDE_GAMING="yes"
INCLUDE_VIRTUALIZATION="yes"
INCLUDE_SECURITY_TOOLS="yes"
INCLUDE_SYSTEM_MONITORING="yes"
INCLUDE_CUSTOM_APPS="yes"

# ===== Build Optimization =====
COMPRESS_OUTPUTIMAGE="sha"
INSTALL_XTABLES_ADDONS="no"
USE_CCACHE="yes"
CCACHE_COMPRESS="yes"
CCACHE_DIR="/workspace/.ccache"

# ===== Output Configuration =====
OUTPUT_IMAGES="tgz img"
ARTIFACT_IGNORE_CACHE="no"
